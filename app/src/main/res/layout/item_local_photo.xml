<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imgPhoto"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/img_tem_size"
        android:layout_marginRight="@dimen/img_item_top_margin"
        android:layout_marginTop="@dimen/img_item_top_margin" />


    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/item_transparent_clickable"
        app:srcCompat="@drawable/ic_cancel_red_24dp" />
</FrameLayout>